<?xml version="1.0" encoding="UTF-8"?>
<bean:beans xmlns:bean="http://www.springframework.org/schema/beans"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://www.springframework.org/schema/batch"
            xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/batch 
    http://www.springframework.org/schema/batch/spring-batch-2.2.xsd">
    <bean:import resource="classpath:ch08/job-context.xml"/>

    <job id="filterJob">
        <step id="filterStep">
            <tasklet transaction-manager="transactionManager">
                <chunk reader="flatFileItemReader" writer="flatFileItemWriter"
                       processor="filterItemProcessor" commit-interval="2">
                    <listeners>
                        <listener ref="filterCountStepExecutionListener"/>
                    </listeners>
                </chunk>
            </tasklet>
        </step>
    </job>

    <bean:bean id="flatFileItemWriter" class="org.springframework.batch.item.file.FlatFileItemWriter">
        <bean:property name="resource" value="file:target/ch08/filter/outputFile.csv"/>
        <bean:property name="lineAggregator" ref="lineAggregator"/>
    </bean:bean>

    <bean:bean id="lineAggregator" class="org.springframework.batch.item.file.transform.DelimitedLineAggregator">
        <bean:property name="delimiter" value=","/>
        <bean:property name="fieldExtractor">
            <bean:bean class="org.springframework.batch.item.file.transform.BeanWrapperFieldExtractor">
                <bean:property name="names" value="accountID,name,amount,date,address">
                </bean:property>
            </bean:bean>
        </bean:property>
    </bean:bean>

    <bean:bean id="flatFileItemReader" scope="step" class="org.springframework.batch.item.file.FlatFileItemReader">
        <bean:property name="resource" value="classpath:ch08/data/flat/credit-card-bill-201310.csv"/>
        <bean:property name="lineMapper" ref="lineMapper"/>
    </bean:bean>

    <bean:bean id="lineMapper"
               class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
        <bean:property name="lineTokenizer" ref="delimitedLineTokenizer"/>
        <bean:property name="fieldSetMapper" ref="creditBillFieldSetMapper"/>
    </bean:bean>

    <bean:bean id="delimitedLineTokenizer"
               class="org.springframework.batch.item.file.transform.DelimitedLineTokenizer">
        <bean:property name="delimiter" value=","/>
        <bean:property name="names" value="accountID,name,amount,date,address"/>
    </bean:bean>

    <bean:bean id="creditBillFieldSetMapper"
               class="com.vther.spring.batch.ch08.CreditBillFieldSetMapper">
    </bean:bean>

    <bean:bean id="creditBill"
               class="com.vther.spring.batch.ch08.CreditBill">
    </bean:bean>

    <bean:bean id="destinationCreditBill"
               class="com.vther.spring.batch.ch08.DestinationCreditBill">
    </bean:bean>

    <bean:bean id="filterItemProcessor"
               class="com.vther.spring.batch.ch08.FilterItemProcessor">
    </bean:bean>

    <bean:bean id="filterCountStepExecutionListener"
               class="com.vther.spring.batch.ch08.FilterCountStepExecutionListener">
    </bean:bean>
</bean:beans>